@page "/generateexercise"
<CascadingValue Value="this">
    @{ List<Data.Exercise> exercisesGen = Generateexercises(days);
        //int dayCount = 0;
        if (exercisesGen != null)
        {
            bool first = true;
            int v = 1;
            int b = 0;
            
            
            for (int i = 0; i < exercisesGen.Count; i++)
            {


                if (exercisesGen[i].newDay != null)
                {
                    if (!first)
                    {
                        v++;
                    }
                    if (v == currentDay)
                    {

                                    <h3 class="SplitDayHeader"> Dag @v :  @exercisesGen[i].newDay </h3>
                           

                    }
                    first = false;
                }
                else
                {

                    if (v == currentDay)
                    {
                        int copy = b;
                        //Console.WriteLine(show[b]);

                        <p> </p>
                        <div class="containerBody2">
                            <ul class="ks-cboxtagsExercise">
                                <li>
                                    <input id="@exercisesGen[i].name" type="checkbox" @onclick="(() => show[copy] = !show[copy])"
                                          checked="@show[copy]"/>
                                    <label for="@exercisesGen[i].name">    @exercisesGen[i].name @exercisesGen[i].repsSets </label>
                                </li>
                            </ul>

                            <div class="exercisesTxt">

                                @if (show[b])
                                {

                                    <br />
                                    <ul class="ks-cboxtagsExerciseSub">
                                        <li>
                                            <label>
                                                Muskel : @exercisesGen[i].muscle_Targeted <br />
                                                Utstyr : @exercisesGen[i].equipment_Type <br />
                                                @exercisesGen[i].repsSets <br />
                                                @exercisesGen[i].rest<br />
                                                @exercisesGen[i].info



                                                @if (@exercisesGen[i].video != null)
                                                {
                                                    <a href="@exercisesGen[i].video" target="_blank" rel="noopener noreferrer"> Instruksjonsvideo </a>



                                                }
                                                <br />
                                                <br />
                                                <img src="@exercisesGen[i].src" width="200" height="200">
                                            </label>
                                        </li>
                                    </ul>


                                }

                            </div>
                        </div>
                        <p>   </p>
                        b++;
                    }
                }
            }
        }
    }
</CascadingValue>


